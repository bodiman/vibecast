{
  "name": "modelit-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for transparent, traceable mathematical models",
  "main": "dist/index.js",
  "bin": {
    "modelit": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/framework-server.ts",
    "dev:old": "tsx src/web-server.ts",
    "start": "tsx src/framework-server.ts",
    "mcp": "tsx src/mcp/creao-server.ts",
    "mcp:inspect": "npx @modelcontextprotocol/inspector tsx src/mcp/creao-server.ts",
    "mcp:test": "tsx test-mcp.ts",
    "clear-db": "node scripts/clear-database.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "mathematical-modeling",
    "cashflow",
    "forecasting"
  ],
  "author": "Modelit Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@prisma/client": "^6.18.0",
    "chromadb": "^3.0.17",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mathjs": "^12.4.0",
    "openai": "^6.7.0",
    "pg": "^8.16.3",
    "prisma": "^6.18.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
